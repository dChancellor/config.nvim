{
  "Web Component Template": {
    "prefix": "wc",
    "body": [
      "class ${1:ComponentName} extends HTMLElement {",
      "  constructor() {",
      "    super();",
      "    this.attachShadow({ mode: 'open' });",
      "  }",
      "",
      "  connectedCallback() {",
      "    this.render();",
      "  }",
      "",
      "  static get observedAttributes() {",
      "    return ['${2:attribute1}', '${3:attribute2}'];",
      "  }",
      "",
      "  attributeChangedCallback(name, oldValue, newValue) {",
      "    this.render();",
      "  }",
      "",
      "  get ${2:attribute1}() {",
      "    return this.getAttribute('${2:attribute1}');",
      "  }",
      "",
      "  set ${2:attribute1}(value) {",
      "    this.setAttribute('${2:attribute1}', value);",
      "  }",
      "",
      "  get ${3:attribute2}() {",
      "    return this.getAttribute('${3:attribute2}');",
      "  }",
      "",
      "  set ${3:attribute2}(value) {",
      "    this.setAttribute('${3:attribute2}', value);",
      "  }",
      "",
      "  render() {",
      "    this.shadowRoot.innerHTML = `",
      "      <style>",
      "        :host {",
      "          /* styling here */",
      "        }",
      "      </style>",
      "      <!-- template here -->",
      "    `;",
      "  }",
      "}",
      "",
      "customElements.define('${4:custom-element-tag}', ${1:ComponentName});"
    ],
    "description": "Creates a template for a generic web component"
  }
}
